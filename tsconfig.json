{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* For linting only (since Rollup handles compilation) */
    "noEmit": true,
    "sourceMap": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*", "types/**/*", "vitest.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/scripts/**",
    "src/htmlComponentsEntry.ts",
    ".storybook/**/*",
    "src/stories/**/*"
  ]
}
